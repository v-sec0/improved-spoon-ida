<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>postboard v1</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Chivo+Mono:ital,wght@0,100..900;1,100..900&family=VT323&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="styles/style.css" />
  </head>
  <body>
    <div style="margin-top: 10%" class="container text-center">
      <div class="row align-items-center mb-3">
        <div class="col">
          <div class="title-text">Postboard v1</div>
        </div>
      </div>
      <div class="row mb-3" novalidate>
        <div class="col">
          <input
            id="usernameInput"
            type="text"
            class="form-control"
            placeholder="enter username"
            aria-label="username"
          />
        </div>
        <div class="col">
          <input
            id="postInput"
            type="text"
            class="form-control"
            placeholder="type post"
            aria-label="post"
          />
        </div>
        <div class="col-2">
          <button class="btn btn-primary" type="button" id="subButton">
            send
          </button>
        </div>
      </div>
      <div class="container text-start postboard">
        <div class="row">
          <% let counter = 1; %>
          <% mongoResults.forEach(result=> { %>
            <div class="card mb-3">
              <div class="card-header">
                Post #<%=counter%>
              </div>
              <div class="card-body">
                <blockquote class="blockquote mb-0">
                  <p><%=result.post%></p>
                  <footer class="blockquote-footer"><%=result.username%></footer>
                </blockquote>
              </div>
            </div>
            <% counter++; %>
          <% }); %>
        </div>
      </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
